# Campaign Management Application - Production Environment
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/database_name

# Application Security
DASHBOARD_PASSWORD=your_secure_dashboard_password
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Service (Optional - Brevo)
BREVO_API_KEY=your_brevo_api_key_here
FROM_EMAIL=noreply@yourdomain.com
TO_EMAIL=admin@yourdomain.com

# Server Configuration
NODE_ENV=production
PORT=5000